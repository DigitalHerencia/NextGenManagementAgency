{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "incremental": true,
        "paths": {
            "@/*": ["./src/*", "./app/*"] // Add "./app/*" here
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/types/next-auth.d.ts",
        "app/**/*.tsx", // Add this to include files in the app folder
        "app/**/*.ts" // Add this to include TypeScript files in the app folder
    ],
    "exclude": ["node_modules"]
}
